<div class="row">
  <div class="col-sm-offset-3 col-sm-6">
    <h1>New Note</h1>
  </div>
</div>

<div class="row">
  <div class="col-sm-6 col-sm-offset-3">
    <%= form_for :note, url: notes_path do |f| %>
        <div class="form-group">
            <%= f.label :text %><br>
            <%= f.text_area :text, class: "form-control tall" %>
        </div>

        <p>
            <%= f.submit class: "btn" %><br>
        </p>
    <% end %>
  </div>
</div>
